platform :ios, "9.0"
use_frameworks!

def default_pods
    inherit! :search_paths
    
    pod 'ManaKit', :path => '../'
    
    pod 'Sync'#, '~> 2'
    pod 'DATASource'#, '~> 5.8'
    pod 'DATAStack'#, '~> 6'
    pod 'Font-Awesome-Swift', :git => 'https://github.com/Vaberer/Font-Awesome-Swift', :branch => 'swift-3'
    pod 'Kanna', :git => 'https://github.com/tid-kijyun/Kanna', :branch => 'feature/v3.0.0'
    pod 'PromiseKit', '~> 6.0'
    pod 'Reachability'
    pod 'SSZipArchive'
    pod 'SDWebImage', '~> 4.0'
end

target 'ManaKit_Example' do
    default_pods
end

target 'ManaKit_Tests' do
    default_pods
end
