use_frameworks!

def default_pods
    pod 'ManaKit', :path => '../'
    
    pod 'Kanna'
    pod 'PromiseKit'
    pod 'SDWebImage'
    pod 'Sync'
end

target 'ManaKit_Example' do
    default_pods
    platform :ios, "10.3"

    pod 'FontAwesome.swift'
    pod 'KeychainAccess'
    pod 'MBProgressHUD'
end

target 'ManaKit CLI' do
    default_pods
    platform :osx, "10.13"
end

target 'ManaKit_App' do
    default_pods
    platform :osx, "10.13"
end

post_install do |installer_representation|
  installer_representation.project.targets.each do |target|
  if target.name == "Pods-ManaKit CLI" || target.name == "Pods-ManaKit_App"
    target.build_configurations.each do |config|
        if config.name == 'QA'
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] || = ['$(inherited)', 'FB_TWEAK_ENABLED=1']
        end
      end
    end
  end
end
  

