use_frameworks!

def default_pods
    pod 'ManaKit', :path => '../'
    
    pod 'Kanna'
    pod 'PromiseKit'
    pod 'SDWebImage'
    pod 'Sync'
end

target 'ManaKit_Example' do
    default_pods
    platform :ios, "10.3"

    pod 'FontAwesome.swift'
    pod 'KeychainAccess'
    pod 'MBProgressHUD'
end

target 'ManaKit CLI' do
    default_pods
    platform :osx, "10.13"
end

target 'ManaKit_App' do
    default_pods
    platform :osx, "10.13"
end

